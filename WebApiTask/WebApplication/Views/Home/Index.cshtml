<div ng-controller="toDo">
    <div class="row">
        <div class="col-md-6">
            <form name="answerform" class="form-horizontal">
                <h2>ToDo</h2>
                <hr />
                <div class="form-group row">
                    <label class="col-md-3 control-label">Author</label>
                    <input class="col-md-offset-3 form-control" ng-model="todo.author" />
                </div>
                <div class="form-group row">
                    <label class="col-md-3 control-label">Title</label>
                    <input class="col-md-offset-3 form-control" ng-model="todo.title" />
                </div>
                <div class="form-group row">
                    <label class="col-md-3 control-label">Description</label>
                    <textarea class="col-md-offset-3 form-control" ng-model="todo.description"></textarea>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3">
                        <input type="submit" class="btn btn-default" value="Register" ng-click="send(todo)" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <h2>ToDos:</h2>
            <hr />
            <div ng-repeat="todo in todos">
                <span><b>Author:</b> {{todo.author}}</span>
                <br />
                <span><b>Title:</b> {{todo.title}}</span>
                <br />
                <span><b>Description:</b> {{todo.description}}</span>
                <hr />
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/WepApi/todoController.js"></script>
    <script src="~/Scripts/WepApi/repository.js"></script>
}
